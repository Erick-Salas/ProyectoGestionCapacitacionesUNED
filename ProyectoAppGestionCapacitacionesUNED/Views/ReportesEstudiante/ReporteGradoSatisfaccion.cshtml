
@{
    ViewData["Title"] = "Reporte Grado Satisfacción de Estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="ReporteGradoSatisfaccion" asp-controller="ReportesEstudiante" method="post">
    <br />
    <div class="form-row">
        <div class="col-6">
            <h2 class="text-info">Reporte de Grado de Satisfacción de Estudiantes</h2>
        </div>
    </div>
    <br />

    <div class="form-row">
        <div class="col-auto">
            <h5 class="font-weight-bold">Código: </h5>
        </div>
        <div class="col-auto">
            <input type="text" name="searchCode" value="@ViewBag.CurrentFilter" />

        </div>
        <div class="col-auto">
            <input type="submit" class="btn btn-info" value="Buscar" />
        </div>

    </div>

    <div class="form-row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>
<hr />


@if (ViewBag.Promedio != null)
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Nombre de la capacitación: @ViewBag.Nombre
            </th>
        </tr>
        <tr>
            <th>
                Código: @ViewBag.Codigo
            </th>
        </tr>
        <tr>
            <th>
                Instructor: @ViewBag.Instructor
            </th>
        </tr>
        <tr>
            <th>
                Fecha de la capacitación: @ViewBag.Fecha
            </th>
        </tr>
        <tr>
            <th>
                Grado de satisfacción de la capacitación: @ViewBag.Promedio
            </th>
        </tr>
    </table>

    <a asp-controller="ReportesEstudiante" asp-action="ReporteGradoSatisfaccionEstudiante" asp-route-searchCode="@ViewBag.CurrentFilter" target="_blank">Generar PDF</a>
    <br />
}

<br />
<div class="form-group">

    <a asp-controller="Home" asp-action="MenuEstudiante" class="btn btn-success">Volver</a>

</div>

